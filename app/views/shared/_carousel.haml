=# required: id, images
.carousel.slide{id: id, "data-ride": "carousel"}
  / Indicators
  %ol.carousel-indicators
    - images.each_with_index do |image, i|
      %li{class: i == 0 ? "active" : "", "data-slide-to": "#{i}", "data-target": "#home-slider"}
  / Wrapper for slides
  .carousel-inner{role: "listbox"}
    - images.each_with_index do |image, i|
      .item{class: i == 0 ? "active" : ""}
        %img.center-block{src: asset_path(image)}/
  / Controls
  %a.left.carousel-control{"data-slide": "prev", href: "##{id}", role: "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden": "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide": "next", href: "##{id}", role: "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden": "true"}
    %span.sr-only Next

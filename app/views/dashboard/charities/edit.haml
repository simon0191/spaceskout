.container
  .row
    .col-xs-12.col-md-6.col-md-offset-3
      %h1 Edit Featured Charity
      = simple_form_for [:dashboard, @charity] do |f|
        = f.input :name
        = f.input :description, input_html: { rows: 20}
        = image_tag(@charity.logo.thumb.url) if @charity.logo?
        = f.input :logo, as: :file
        = f.submit 'Update', class: 'btn btn-success'
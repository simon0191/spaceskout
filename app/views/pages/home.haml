#home-slider.carousel.slide{"data-ride": "carousel"}
  / Indicators
  %ol.carousel-indicators
    - (0..4).each do |i|
      %li{class: i == 0 ? "active" : "", "data-slide-to": "#{i}", "data-target": "#home-slider"}
  / Wrapper for slides
  .carousel-inner{role: "listbox"}
    - (0..4).each do |i|
      .item{class: i == 0 ? "active" : ""}
        %img{src: asset_path("slider/slider-bg-#{i}.jpg")}/
  / Controls
  %a.left.carousel-control{"data-slide": "prev", href: "#home-slider", role: "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden": "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide": "next", href: "#home-slider", role: "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden": "true"}
    %span.sr-only Next

